/* create.wxss */

@import "../../components/xincell/xincell.wxss";
@import "../../components/recorder/recorder.wxss";

.create_container {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.create_scroll {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  position:absolute;
}

.create_head {
  margin: 20px;
}

.create_phone_input {
  line-height: 44px;
  height: 44px;
  font-size: 17px;
  width: 100%;
}

.select_container {
  display: flex;
  height: 170px;
  background-color: white;
  margin: 20px;
  box-shadow: 0px 0px 5px #bbb;
  border-radius: 3px;
  flex-direction: row;
  justify-content: space-between;
  padding: 20px;
}

.record_panel {
  display: flex;
  width: 33%;
  flex-direction: column;
  justify-content: center;
}

.record_panel_image {
  width: 48px;
  height: 48px;
  margin: 10px auto;
}

.record_panel_text {
  font-size: 30px;
  color: #888;
  width: 44px;
  text-align: center;
  margin: auto;
}

.record_panel_detail {
  margin: 0px auto;
  font-size: 14px;
  color: #666;
  text-align: center;
}

.record_panel_subdetail {
  margin: 5px auto;
  font-size: 11px;
  color: #888;
  text-align: center;
}

.video_record_button {
  width: 80px;
  height: 80px;
}

.audio_record_panel {
  display: block;
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: red;
  left: 0px;
  top: 0px;
  z-index: 999;
  overflow: hidden;
}

.create_preview_button {
  margin: 20px 20px;
}