/* xincell.wxss */

/* cell容器样式 */
.cell_container {
  display: flex;
  background-color: white;
  flex-direction: column;
  box-shadow: 1px 1px 2px #ddd;
  border-radius: 3px;
}

/* 头部容器样式 */
.cell_head {
  display: flex;
  padding: 10px;
  height: 44px;
}

.cell_head_map {
  display: flex;
  height: 44px;
  padding: 0px 10px;
}

/* 头部左边头像样式 */
.cell_avatar {
  width: 44px;
  height: 44px;
  border-width: 0.8px;
  border-color: lightgray;
  border-style: solid;
  border-radius: 3px;
}

/* 头部右边容器样式 */
.cell_head_right {
  width: 90%;
  right: 0px;
  display: flex;
  justify-content: space-between;
  /* background-color: red; */
}

/* 头部右边容器样式 */
.cell_head_right_custom {
  width: 100%;
  right: 0px;
  display: flex;
  justify-content: space-between;
  /* background-color: red; */
}

/* 标题栏容器样式 */
.cell_title_container {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding: 0px 10px; 
  width: 100%;
}

/* 昵称样式 */
.cell_nickname {
  font-size: 17px;
  font-weight: bold;
  color: #000;
}

.cell_status {
  font-size: 14px;
  font-weight: bold;
  color: red;
  width: 80px;
  margin: auto;
  text-align: right;
}

/* 日期样式 */
.cell_date {
  font-size: 14px;
  color: #888;
}

/* 单独title样式（部分标题和副标题，只有一行标题） */
.cell_single_title {
  line-height: 44px;
  height: 44px;
  font-size: 17px;
  width: 100%;
}

/* 编辑按钮样式 */
.cell_edit {
  display: flex;
  width: 44px;
  height: 44px;
  margin-top: auto;
  margin-bottom: auto;
}

/* 预览容器样式 */
.cell_preview_container {
  display: flex;
  flex-direction: column;
  width: 100%;
}

/* 图片预览样式 */
.cell_preview_image {
  width: 100%;
  height: 100%;
}

/* 视频预览样式 */
.cell_preview_video {
  background-color: black;
  width: 100%;
  height: 100%;
  position: relative;
}

/* 音频容器样式 */
.cell_audio_container {
  display: flex;
  width: 100%;
  height: 44px;
  text-align: center;
}

.cell_process_container {
  display: inline-block;
  position: relative;
  height: inherit;
  width: 100%;
}
/* 进度条 */
.cell_audio_process {
  width: 100%;
  position: absolute;
  top: 19px;
}

/* 进度条title */
.cell_audio_play_title {
  display: flex;
  position: absolute;
  top: 0px;
  left: 0px;
  z-index: 999;
  width: 100%;
  height: 100%;
  justify-content: center;
  flex-direction: column;
  color: #666;
  font-size: 16px;
   opacity: 0; 
}

/* 音频图标样式 */
.cell_audio {
  width: 44px;
  height: 44px;
  margin: auto 0px;
}

/* 音频时间样式 */
.cell_audio_time {
  width: 44px;
  height: 44px;
  line-height: 44px;
  font-size: 14px;
  color: #888;
  margin: auto 0px;
}

/* 位置 */
.cell_location {
  text-align: center;
  line-height: 44px;
  height: 44px;
  font-size: 14px;
  color: #888;
}

/* 分割线 */
.cell_separator {
  width: 100%;
  height: 0.8px;
  background-color: #b2b2b2;
  opacity: 0.25;
}