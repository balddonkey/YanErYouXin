/* recorder.wxss */

.recorder_container {
  display: flex;
  background-color: white;
  flex-direction: column;
  width: 100%;
  height: 100%;
}

.recorder_timer {
  margin: 150px auto;
  margin-bottom: 0px;
  font-size: 36px;
  width: 100%;
  text-align: center;
  font-weight: lighter;
}

.recorder_prompt {
  margin: 15px auto;
  width: 100%;
  text-align: center;
  font-size: 16px;
}

.recorder_button {
  position: absolute;
  bottom: 100px;
  left: 50%;
  margin-left: -32px;
  width: 64px; 
  height: 64px;
  text-align: center;
}

.recorder_close {
  position: fixed;
  top: 10px;
  right: 10px;
  width: 55px;
  height: 55px;
  font-size: 48px;
  line-height: 55px;
  text-align: center;
  justify-content: center;
}